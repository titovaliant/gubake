                    <img class='com_gunting kotak'src="./cssgame/gunting.png" alt="">
                  </div>                   
                </div>
            </div>

            <!-- Refresh -->
            <div class="col-sm-12" style="display: flex; flex-direction: column; align-items: center; padding-top: 35px;">
              <a href="/home" class="button2" style="align-items: center;"> <u> HOME </u> </a>  
              <img class='refresh kotak' id="refreshing" src="./cssgame/refresh.png" style="margin-top: 2px;">
            </div>
        
      </div>      

