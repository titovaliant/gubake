  <body>

    <!-- Section header -->
      <div class="background-img">  
        <a href="/home" class="button1"> <u> < </u> </a>
        
        <img class='logo1-header' src="./cssgame/logo_1.png">
        <h2 class="h1-main-screen">ROCK PAPER SCISSORS (GU BA KE)</h2>

        <div class="row" style="padding-top: 162px;">

            <!-- Player Choice -->
            <div class="col-sm-4" style="display: flex; flex-direction: column; align-items: center;">
                <h1 class="player1_text">player 1</h1>
                <p> (Click on the icon)</p>
                
                <div class='player_choices'>
                  <div class="player_choices" id="p_batu">
                    <img class='player1_batu kotak'src="./cssgame/batu.png" alt="">
